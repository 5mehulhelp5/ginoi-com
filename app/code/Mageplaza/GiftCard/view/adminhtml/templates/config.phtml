/** @var JsUseConfig $block */

use Mageplaza\GiftCard\Block\Adminhtml\GiftCard\Edit\Tab\Renderer\JsUseConfig;

?>
<style>
    input#mpgiftcard-is-can-refund_option-use-config {
        margin: 0 !important;
    }
</style>
<script type="text/javascript">
    require(['jquery'], function($){
        $(document).ready(function() {

            var checkboxRefund = $('#mpgiftcard-is-can-refund_option-use-config'),
                InputIsCanRefund  = $('#is_can_refund');

            function toggleInput() {
                checkboxRefund.parent().removeClass('addafter');

                if (checkboxRefund.prop('checked')) {
                    InputIsCanRefund.prop('disabled', true);
                } else {
                    InputIsCanRefund.prop('disabled', false);
                }
            }

            checkboxRefund.on('change', toggleInput);

            toggleInput();
        });
    });
</script>
