<script type="text/javascript">
    require(['jquery'], function($){
        $(document).ready(function() {

            var checkboxConditionsUse = $('#mpgiftcard_product_checkout_condition_inherit'),
                InputGiftCardUse  = $('#mpgiftcard_product_checkout_condition');

            function toggleInput() {

                if (checkboxConditionsUse.prop('checked')) {
                    InputGiftCardUse.prop('disabled', true);
                } else {
                    InputGiftCardUse.prop('disabled', false);
                }

            }
            checkboxConditionsUse.on('change', toggleInput);

            toggleInput();
        });
    });
</script>
